@model BerrasBio.Models.Display

@{
    ViewData["Title"] = "Details";
}

<body class="details">
    <div>
        <h4>Movie Info - @ViewData["DateToday"]</h4>

        <hr />

        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Movie.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Movie.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Movie.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Movie.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Salon)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Salon.ID)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StartingTime)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StartingTime)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Salon.TotalSeats)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Salon.TotalSeats)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SeatsLeft)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SeatsLeft)
            </dd>
            <dt class="col-sm-2">
                Ticket Price
            </dt>
            <dd class="col-sm-10">
                @ViewBag.TicketPrice Sek
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Bookings" asp-route-id="" class="btn btn-success">Buy</a>
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</body>